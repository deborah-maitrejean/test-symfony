{% extends 'base.html.twig' %}

{% block body %}
    <h1>Inscription sur le site</h1>

    {{ form_start(form) }}
        {{ form_row(form.username, {'label' : 'Nom d\'utilisateur','attr': {
            'placeholder' : 'Nom utilisateur', 'title': 'Entrez votre nom'} }) }}
        {{ form_row(form.email, {'label': 'Adresse email', 'attr': {'placeholder': 'Adresse email'}}) }}
        {{ form_row(form.password, {'label' : 'Mot de passe','attr': {
            'placeholder' : 'Mot de passe'}} )}}
        {{ form_row(form.confirm_password, {'label' : 'Confirmation du mot de passe','attr': {
            'placeholder' : 'Confirmez le mot de passe'}}) }}
         <button type="submit" class="btn btn-success">Valider</button>
    {{ form_end(form) }}
{% endblock %}

