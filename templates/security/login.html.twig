{% extends 'base.html.twig' %}

{% block body %}
    <h1>Connexion</h1>
    <form action="{{ path('security_login') }}" method="post">
        <div class="form-group">
            <input type="text" placeholder="Adresse email" class="form-control" required name="_username"> <!-- on doit écrire _username-->
        </div>
        <div class="form-group">
            <input type="password" placeholder="Mot de passe" class="form-control" required name="_password"> <!-- on doit écrire _password-->
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-success">Connexion</button>
        </div>
    </form>
{% endblock %}

