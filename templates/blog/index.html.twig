{% extends 'base.html.twig' %}

{% block title %}Hello {{ controller_name }}!{% endblock %}

{% block body %}

    <section class="articles">
        {% for post in posts %}
            <article>
                <h2>{{ post.title }}</h2> <!-- équivalent sur autre projet à post->getTitle() -->
                <!-- on utilise un filtre: permet de formater une variable avant de l'afficher -->
                <div class="metadata">Ecrit le {{ post.createdAt | date('d/m/Y') }} à {{ post.createdAt | date('H:i') }} dans la catégorie Politique</div>
                <div class="content">
                    <img src="{{ post.image }}" alt="">
                    <!-- on demande avec le filtre brute d'afficher les données tel quels, avec balises s'il y en a -->
                    {{ post.content |raw }}
                    <!-- on ajoute un paramètre à la route, qui est un objet javascript comme du JSON -->
                    <a href="{{ path('blog_show', {'id': post.id}) }}" class="btn btn-primary">Lire la suite</a></div>
            </article>
        {% endfor %}
    </section>

{% endblock %}
